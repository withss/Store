  // extensions
  "git-graph.showStatusBarItem": false,
  "gitHistory.showEditorTitleMenuBarIcons": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.scopes": ["document"],
  "sync.autoUpload": true,
